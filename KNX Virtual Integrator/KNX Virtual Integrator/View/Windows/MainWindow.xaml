                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        
                        
                        <!-- Bouton de Test -->
                        <Button Content="{DynamicResource TestButton}"
                            Style="{StaticResource IconTextButtonStyle}"
                            Foreground="{StaticResource DarkForegroundBrush}"
                            Background="{StaticResource BlueBrush}"
