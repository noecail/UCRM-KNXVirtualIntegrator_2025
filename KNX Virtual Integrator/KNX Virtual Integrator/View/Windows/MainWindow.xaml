                                Tag="{StaticResource ExportedDrawingImage}"
                                Background="{StaticResource BlueBrush}"
                                Click="OnCreateTestReportButtonClick"
                        />
                        
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contour principal incluant le tableau avec les 4 colonnes -->
            <Border Grid.Row="1" x:Name="AllColumnBorder" BorderBrush="{StaticResource GrayBorderBrush}" BorderThickness="1" Margin="10,0,10,10">
                <Grid>
                    <!-- Define rows and columns for the nested grid -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />  <!-- Titres  -->
                        <RowDefinition Height="*" />     <!-- Contenu -->
                    </Grid.RowDefinitions>
                    <!-- La largeur des colonnes se règle avec les GridSplitter -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="Col0" Width="3*"/>    <!-- Structures de Modèles -->
                        <ColumnDefinition Width="3"/>                   <!-- GridSplitter -->
