                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> <!--Boutons de gauche-->
                        <ColumnDefinition Width="*"/> <!--Boutons de centre gauche-->
                        <ColumnDefinition Width="*"/> <!--Centre droit : pas de boutons-->
                        <ColumnDefinition Width="*"/> <!--Boutons de droite-->
                    </Grid.ColumnDefinitions>
                    
