                        <ColumnDefinition x:Name="Col2" Width="4*"/>    <!-- Éléments à Tester -->
                        <ColumnDefinition Width="3"/>                   <!-- GridSplitter -->
                        <ColumnDefinition x:Name="Col3" Width="3*"/>    <!-- Adresses -->
                    </Grid.ColumnDefinitions>
                        
                        
                        
    <!-- ___________________________________________________________________________________________________________________________________________________________________________________________ -->
                    <!-- Première colonne
                    Bibliothèque des Structures de Modèle Fonctionnel
                    Contient toutes les Structures de Modèle Fonctionnel (çàd non instanciées), prédéfinies ou crées (ou suggérées (IA))
                    ex : Structure de Modèle Fonctionnel pour les lampes
                    -->
                    
                    <!-- En-tête colonne 1 -->
                    <Border Grid.Row="0" Grid.Column="0"
                            x:Name="BorderStructBib"
                            Style="{StaticResource BorderLight}"
                            BorderThickness="0,0,1,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" /> <!-- Titre avec son icon-->
                                <ColumnDefinition Width="Auto" /> <!--Bouton d'import-->
                                <ColumnDefinition Width="Auto" /> <!--Bouton d'export-->
                            </Grid.ColumnDefinitions>
                            
                            <!-- Bandeau supérieur -->
                            <TextBlock Grid.Column="0"
                                       x:Name="Number2" Text="2"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                            
                            <StackPanel Grid.Column="1"
                                        Background="{StaticResource NoColorBrush}" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="10,0">
                                <Image Source="{StaticResource LibraryDrawingImage}" Height="20"/>
                                <TextBlock x:Name="StructBibTitleText"
                                           Style="{StaticResource TitleTextLight}"
                                           Text="{DynamicResource Library}"
                                />
                                <Button Content="Afficher Structures" Click="PrintStructuresButtonClick"    Visibility="Collapsed"/>
                                <Button Content="Afficher Dico" Click="PrintStructureDictionaryButtonClick" Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Bouton d'import -->
                            <Button Grid.Column="2"
                                    x:Name="ImportDictButton"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource IconButtonStyle}"
                                    Tag="{StaticResource ImportedDrawingImage}"
                                    Foreground="{StaticResource DarkForegroundBrush}"
                                    Click="ImportDictionnaryButtonClick"
                                    Background="{StaticResource BlueBrush}"
                                    Margin="2"
                            />
                            <!-- Bouton d'export -->
                            <Button Grid.Column="3"
                                    x:Name="ExportDictButton"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource IconButtonStyle}"
                                    Tag="{StaticResource ExportedDrawingImage}"
                                    Foreground="{StaticResource DarkForegroundBrush}"
                                    Click="ExportDictionnaryButtonClick"
                                    Background="{StaticResource BlueBrush}"
                                    BorderBrush="{StaticResource BlueBrush}"
                                    Margin="2"
                            />
                        </Grid>
                    </Border>
                        
                    <!-- Contenu colonne 1 : liste des Structures de Modèles Fonctionnels : prédéfinis, créés et suggérés -->
                    <Border Grid.Row="1" Grid.Column="0"
                            x:Name="BorderAllStruct"
                            Style="{StaticResource BorderLight}"
                            BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>      <!-- Titre modèles prédéfinis-->
                                <RowDefinition Height="*"/>         <!-- Liste modèles prédéfinis-->
                                <RowDefinition Height="Auto"/>      <!-- Bandeau inférieur : ajouter/supprimer Structures-->
                            </Grid.RowDefinitions>

                            <!-- Titre Structures prédéfinies-->
                            <Border Grid.Row="0"
                                    x:Name="BorderDefStructTitle"
                                    Style="{StaticResource BorderTitleLight}"
                                    BorderThickness="0,0,0,2"
                                    Padding="5">
                                
                                <TextBlock x:Name="BorderDefStructTitleText"
                                           Style="{StaticResource TitleTextLight}"
                                           Text="{DynamicResource PredefinedStructures}"
                                />
                            </Border>

                            <!-- Listes des Modèles prédéfinis-->
                            <ListBox Grid.Row="1"
                                     x:Name="StructuresBox"
                                     ItemsSource="{Binding Structures}"
                                     SelectedItem="{Binding SelectedStructure, Mode=TwoWay}"
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     ScrollViewer.CanContentScroll="False"
                                     ScrollViewer.PanningMode="VerticalOnly"
                                     IsManipulationEnabled="True"
                                     ItemContainerStyle="{StaticResource ModelListBoxItemStyleLight}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Model.Name}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Bandeau inférieur -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>    <!--Bouton création-->
                                    <ColumnDefinition Width="Auto"/> <!--Bouton édition-->
                                    <ColumnDefinition Width="Auto"/> <!--Bouton suppression-->
                                </Grid.ColumnDefinitions>
                                
                                <!--Bouton de création-->
                                <Button Grid.Column="0" HorizontalAlignment="Stretch"
                                        Click="CreateStructureButtonClick"
                                        Style="{StaticResource NewSomethingButtonStyle}"
                                        Tag="{DynamicResource NewStructure}"
                                />
                                
                                <!--Bouton d'édition-->
                                <Button Grid.Column="1"
                                        x:Name="EditStructButton"
                                        Style="{StaticResource EditStructureButtonStyleLight}"
                                        Height="35"
                                        Padding="7"
                                        Click="EditStructureButtonClick"
                                />
                                
                                <!--Bouton de suppression -->
                                <Button Grid.Column="2"
                                        x:Name="StructSupprButton"
                                        Style="{StaticResource DeleteStructureButtonStyleLight}"
                                        Height="35"
                                        Click="DeleteStructuresButtonClick"
                                />
                            </Grid>
                        </Grid>
                    </Border>

                    <GridSplitter Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" ShowsPreview="True"/>
    <!-- ___________________________________________________________________________________________________________________________________________________________________________________________ -->
                    <!-- Deuxième colonne
                    Liste des Modèles Fonctionnels correspondant à la Structure Sélectionnée
                    Contient tous les Modèles Fonctionnels qui ont été créés à partir de la Structure sélectionnée
                    ex : tous les Modèles Fonctionnels pour toutes les lampes de l'installation
                    -->

                    <!-- En-tête colonne 2-->
                    <Border Grid.Row="0" Grid.Column="2" 
                            x:Name="BorderModelBib"
                            Style="{StaticResource BorderLight}"
                            BorderThickness="0,0,1,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" /> <!-- Titre avec son icon-->
                                <ColumnDefinition Width="Auto" /> <!--Bouton de recherche-->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       x:Name="Number4" Text="4"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                            
                            <StackPanel Grid.Column="1" Background="{StaticResource NoColorBrush}" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0">
                                <Image Source="{StaticResource FunctionalModelDrawingImage}" Height="20"/>
                                <TextBlock x:Name="ModelBibText"
                                           Style="{StaticResource TitleTextLight}"
                                           Text="{DynamicResource ModelsTitle}"
