<mah:MetroWindow x:Class="KNX_Virtual_Integrator.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:KNX_Virtual_Integrator.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStyle="None"
        Width="1366" Height="786"
        WindowTitleBrush="{StaticResource BackgroundGreen}"
        NonActiveWindowTitleBrush="{StaticResource BackgroundLightGreen}"
        Background="{StaticResource BackgroundWhite}"
        TitleCharacterCasing="Normal"
        ShowIconOnTitleBar="False"
        Closing="ClosingMainWindow">
    
        <!--
    
        Note :
        All design elements and their interactions are contained 
        in the mockup available on GitHub. 
    
        -->


    <!-- Paramètres du logo dans la barre de titre, le logo est à modifier -->
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <StackPanel Background="Transparent"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="{StaticResource LogoDrawingImage}" Height="15" Margin="10"/>
            </StackPanel>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarInfo"/>
    </mah:MetroWindow.TaskbarItemInfo>

    <!-- Conteneur principal -->

        <Grid>
            <!-- Découpage en 2 Lignes : Boutons et tableaux -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <!-- Bandeau supérieur avec tous les boutons -->
            <!-- Boutons de gauche -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">

                <!-- Bouton Connexion -->
                <!-- Note : Le style des boutons et tous les styles sont contenues dans le fichier styles.xaml -->
                <Button 
                    Click="OpenConnectionWindow"
                    Style="{StaticResource ConnectButton}"
                    Margin="0,0,5,0"
                    
                />

                <!-- Premier bouton Importation -->
                <Button Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource ImportedDrawingImage}" 
                    Click="ImportGroupAddressFileButtonClick"                       
                    Margin="5,0,0,0"
                />

                <!-- Deuxième bouton Importation -->
                <Button Content="{StaticResource ImportButton}"
                    Style="{StaticResource IconTextButtonStyle}"
                    Tag="{StaticResource ImportedDrawingImage}"
                    Click="ImportProjectButtonClick"
                    Background="{StaticResource ButtonBlue}"
                    Margin="5,0"
                />

                <!-- Bouton Paramètres -->
                <Button Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource settingsDrawingImage}"
                    Click="SettingsButtonClick"
                    Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderGray}"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,0"
                />

                <!-- Bouton Test trames -->
                <Button Content="Envoyer Trame" Click="OnWriteButtonClick" />
                <Button Content="Lire Trame" Click="OnReadButtonClick" />
            </StackPanel>
            
            <!-- Boutons de droite -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">

                <!-- Bouton de Test -->
                <Button Content="{StaticResource TestButton}"
                    Style="{StaticResource IconTextButtonStyle}"
                    Tag="{StaticResource playDrawingImage}"
                    Margin="5,0"
                />
                
                <!-- Bouton d'Exportation -->
                <Button Content="{StaticResource ExportButton}"
                    Style="{StaticResource IconTextButtonStyle}"
                    Tag="{StaticResource ExportedDrawingImage}"
                />
                
            </StackPanel>

        <!-- Contour principal incluant le tableau avec les 4 colonnes -->
        <Border Grid.Row="1" BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Margin="10,0,10,10">
                <Grid>
                    <!-- Define rows and columns for the nested grid -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />  <!-- Titres -->
                        <RowDefinition Height="*" />   <!-- Contenu -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="200"  Width="Auto" /> <!-- Modèles -->
                        <ColumnDefinition Width="{Binding ModelColumnWidth}" />  <!-- Param Modèles + Gestion de la visibilité de la colonne -->
                        <ColumnDefinition Width="{Binding AdressColumnWidth}" /> <!-- Param Adresses + Gestion de la visibilité de la colonne -->
                        <ColumnDefinition MinWidth="200"  Width="*" /> <!-- Adresses -->
                    </Grid.ColumnDefinitions>

                    <!-- Première colonne : Modèles_____________________________________________________________________________________ -->
                    <!-- Bordure pour l'en-tête
                    Note : On applique des bordures droites sur chaque élément de la colonne pour donner
                    l'effet d'onglet sélectionné en lien avec les paramètres -->

                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,0,1,1"
                            Background="{StaticResource BackgroundLightGray}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" /> <!-- Titre avec son icon-->
                                <ColumnDefinition Width="Auto" /> <!--Bouton de recherche-->
                            </Grid.ColumnDefinitions>

                            <StackPanel Background="Transparent" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0">
                                <Image Source="{StaticResource FonctionalModelDrawingImage}" Height="20"/>
                                <TextBlock 
                                       Style="{StaticResource TitleTextStyle}"
                                       Text="{StaticResource ModelsTitle}"
                                />
                            </StackPanel>

                            <!-- Bouton de recherche,(Non-implémenté)-->
                            <Button Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource SearchDrawingImage}"
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="1"
                                Margin="5"
                                Padding="5"
                                Background="{StaticResource BackgroundWhite}"
                                Height="30"
                            />
                        </Grid>
                    </Border>
                        
                    <!-- Contenu Colonne 1 : liste des modèles liés, Non-liés et Bouton d'ajout au projet -->
                    <Grid Grid.Row="1" Grid.Column="0" Background="{StaticResource BackgroundLightGray}" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Titre lié-->
                            <RowDefinition Height="250" /><!-- Listes liées-->
                            <RowDefinition Height="Auto"/><!-- Titre non-lié-->
                            <RowDefinition Height="250"/><!-- Liste non-liées-->
                            <RowDefinition Height="*" /><!-- -->
                            <RowDefinition Height="30" /><!-- Bouton d'ajout de modèles-->
                        </Grid.RowDefinitions>

                        <!-- Titre modèles liés-->
                        <Border Grid.Row="0"  BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,0,1,2"
                            Padding="5"
                            Background="{StaticResource BackgroundDarkGray}">
                            
                            <TextBlock FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="{StaticResource TextBlack}"
                                       Text="{StaticResource PredefinedModels}"
                            />
                        </Border>

                        <!-- Listes modèles liés-->
                        <ScrollViewer x:Name="PredefinedModelsScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Visible" BorderBrush="Black" BorderThickness="10">
                                <ListBox ItemsSource="{Binding Models}"
                                         SelectedItem="{Binding SelectedModel}"
                                         Background="{StaticResource BackgroundLightGray}"
                                         ItemContainerStyle="{StaticResource ModelListBoxItemStyle}"
                                />
                        </ScrollViewer>

                        <!-- Titre modèles non-liés-->
                        <Border Grid.Row="2"  BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="0,0,1,2"
                                Padding="5"
                                Background="{StaticResource BackgroundDarkGray}">
                                <TextBlock FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{StaticResource TextBlack}"
                                           Text="{StaticResource PersonalizedModels}"
                                />
                        </Border>
                            
                        <!-- Listes modèles non-liés : Crée une liste à part des modèles non-liés (different du dico general) -->
                        <ScrollViewer Grid.Row="3"  VerticalScrollBarVisibility="Visible">
                                <ListBox ItemsSource="{Binding Models}"
                                         SelectedItem="{Binding SelectedModel}"
                                         FontStyle="Italic"
                                         Background="{StaticResource BackgroundLightGray}"
                                         
                                         ItemContainerStyle="{StaticResource ModelListBoxItemStyle}"
                                />
                                
                        </ScrollViewer>
                        
                        <!-- Combler l'espace restant afin d'avoir une bordure droite -->
                        <Border Grid.Row="4"  BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="0,0,1,0"
                                Padding="5"
                                Background="{StaticResource BackgroundDarkGray}"
                        />


                        <!-- Bouton d'ajout de modèles-->
                        <Button Grid.Row="5" HorizontalAlignment="Stretch"
                                Click="CreateFunctionalModelButtonClick"
                                Style="{StaticResource CreateFunctionalModelButtonStyle}"
                                Margin="0"
                                Padding="0"
                        />
                    </Grid>


                    <!-- Deuxième colonne : Paramètres modèles_______________________________________________________________________________ -->
                    <!-- En-tête -->
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="0,0,1,0" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" /> <!-- Titre -->
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*" /> <!--Bouton de fermeture-->
                            </Grid.ColumnDefinitions>

                            <!-- Titre -->
                            <TextBlock Grid.Column="0"
                                   Style="{StaticResource TitleTextStyle}"
                                   Text="Paramètres du Modèle Fonctionnel"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5,0"
                            />

                            <!--Bouton de suppression -->
                            <Button Grid.Column="1"
                                    Style="{StaticResource DeleteFunctionalModelButtonStyle}"
                                    Tag="{StaticResource BinDrawingImage}"
                                    HorizontalAlignment="Right"
                                    Height="35"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BorderGray}"
                                    Click="DeleteFunctionalModelButtonClick"
                                    />
                            
                            <!--Bouton de Fermeture -->
                            <Button Grid.Column="2"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource CloseDrawingImage}"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                Height="35"
                                Command="{Binding HideModelColumnCommand}"
                            />
                        </Grid>
                    </Border>
                    
                    <!-- Contenu des paramètres des modèles -->
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="0,0,1,0" >
                        <Grid Margin="10,10,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"  />  <!-- Ensemble des Paramètres -->
                                <RowDefinition Height="Auto" /> <!-- Boutons Enregister et Filtrer-->
                            </Grid.RowDefinitions>
                            
                            <!-- Ensemble des Paramètres -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0" FocusVisualStyle="{x:Null}" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/> <!-- Paramètres Généraux -->
                                        <RowDefinition Height="Auto"/> <!-- Paramètres Avancées -->
                                        <RowDefinition Height="*"/> <!-- Tableaux des Envois/Receptions-->
                                    </Grid.RowDefinitions>

                                    <!-- Paramètres Généraux -->
                                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,10,0,0">
                                        
                                        <!--Nom-->
                                        <TextBlock Text="{StaticResource Name:}" VerticalAlignment="Center"/>
                                        <TextBox x:Name="NomTextBox" HorizontalAlignment="Left" Width="200"
                                                 Text="{Binding SelectedModel.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        
                                        <!--DPT : Venir liées le ComboBox a un dictionnaire de DPT traitées par le logiciel en back-->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ListBox Name="SelectedElementsListBox"
                                                     ItemsSource="{Binding SelectedModel.ElementList}"
                                                     SelectedItem="{Binding SelectedTestedElement}"
                                                     ItemContainerStyle="{StaticResource TestedElementListListBoxItemStyle}"
                                                     AlternationCount="100"
                                                     >
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        
                                                        <!-- Element à tester = Liste de DPTs {types des DPTs, adresses d'envoi et de retours, liste de valeurs}-->
                                                        <StackPanel Orientation="Vertical">
                                                            
                                                            <!-- Bandeau supérieur -->
                                                            <Grid Margin="0,0,0,5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>    <!-- Titre : "Élément à tester" -->
                                                                    <ColumnDefinition Width="Auto"/> <!-- Bouton de suppression -->
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <!-- Titre -->
                                                                <TextBlock Grid.Column="0" Text="Élément à tester" FontWeight="SemiBold"/>
                                                                
                                                                <!-- Pour l'index de l'élément à tester -->
                                                                <TextBlock Grid.Column="1" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=AlternationIndex}"/>
                                                                <!-- Bouton de suppression -->
                                                                <Button Grid.Column="1" 
                                                                        Style="{StaticResource DeleteTestedElementButtonStyle}"
                                                                        Tag="{StaticResource BinDrawingImage}"
                                                                        HorizontalAlignment="Right"
                                                                        Height="35"
                                                                        BorderThickness="1"
                                                                        BorderBrush="{StaticResource BorderGray}"
                                                                        Click="RemoveTestedElementFromModelButtonClick"
                                                                />
                                                            </Grid>
                                                            
                                                            <!-- Bandeau suivant -->
                                                            <StackPanel Orientation="Horizontal" >
                                                                <TextBlock Text="Envoi" Margin="90,0,15,0"/>
                                                                <TextBlock Text="Réception(s)"/>
                                                            </StackPanel>
                                                            
                                                            <!-- Contenu de l'élément à tester -->
                                                            <Grid >
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>   <!--"Envoi" ou "Réception"-->
                                                                    <RowDefinition Height="Auto"/>   <!--Type de DPT-->
                                                                    <RowDefinition Height="Auto"/>   <!--Adresses-->
                                                                    <RowDefinition Height="Auto"/>   <!--Valeurs-->
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="80"/> <!--"Type du DPT" ou "Adresse liée" ou "Valeurs"-->
                                                                    <ColumnDefinition Width="*"/> <!--Colonne(s) d'envois et de réceptions-->
                                                                </Grid.ColumnDefinitions>
                                                               
                                                                <!-- Liste des types de DPT (envoi (1) et réception (0+))-->
                                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Type de DPT :"/>
                                                                <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Tests}" Background="{StaticResource BackgroundLightGray}">
                                                                    <ListBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal" />
                                                                        </ItemsPanelTemplate>
                                                                    </ListBox.ItemsPanel>
                                                                    <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <TextBox Text="{Binding Type}"
                                                                                Width="40"
                                                                                HorizontalContentAlignment="Center"
                                                                                Background="{StaticResource BackgroundLightGray}"
                                                                                />
                                                                        </DataTemplate>
                                                                    </ListBox.ItemTemplate>
                                                                </ListBox>
                                                                
                                                                <!-- Liste des adresses liées aux DPTs (envoi (1) et réception (0+)) -->
                                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Adresse liée :"/>
                                                                <ListBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Tests}" Background="{StaticResource BackgroundLightGray}">
                                                                    <ListBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal"
                                                                                VerticalAlignment="Top"/>
                                                                        </ItemsPanelTemplate>
                                                                    </ListBox.ItemsPanel>
                                                                    <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <TextBox Text="{Binding Address}"
                                                                                Width="40"
                                                                                HorizontalContentAlignment="Center"
                                                                                Background="{StaticResource BackgroundLightGray}"
                                                                                />
                                                                        </DataTemplate>
                                                                    </ListBox.ItemTemplate>
                                                                </ListBox>
                                                                
                                                                <!-- Valeurs à envoyer et à recevoir sur les adresses précédentes (envoi (1) et réception (0+)) -->
                                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Valeurs :"/>
                                                                <ListBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Tests}" Background="{StaticResource BackgroundLightGray}">
                                                                    <ListBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal"/>
                                                                        </ItemsPanelTemplate>
                                                                    </ListBox.ItemsPanel>
                                                                    <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Center">
                                                                                <TextBox Text="{Binding Value}"
                                                                                         Width="40"
                                                                                         HorizontalContentAlignment="Center"
                                                                                         Background="{StaticResource BackgroundLightGray}"
                                                                                         />
                                                                             </ScrollViewer>
                                                                        </DataTemplate>
                                                                    </ListBox.ItemTemplate>
                                                                </ListBox>
                                                            </Grid>
                                                             
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </ScrollViewer>
                                        
                                        
                                        <!-- Bouton d'ajout d'élément à tester-->
                                        <Button HorizontalAlignment="Stretch"
                                                Click="AddTestedElementToModelButtonClick"
                                                Style="{StaticResource AddTestedElementToModelButtonStyle}"
                                                Margin="0,10,0,0"
                                                Padding="0"
                                        />
                                        
                                        
                                        
                                        
                                        
                                        

                                        <!--DPT Subtype : Venir liées le ComboBox a un dictionnaire de DPT Subtype en fonction du DPT choisis ainsi que sa visibilité-->
                                        <TextBlock Text="{StaticResource DPTsubtype}" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                        <ComboBox x:Name="DptSortieComboBox2" Width="200" HorizontalAlignment="Left">
                                            <ComboBoxItem Content="1 bit" />
                                            <ComboBoxItem Content="2 bits" />
                                            <ComboBoxItem Content="4 bits" />
                                        </ComboBox>

                                        <!-- Param Avancés -->
                                        <CheckBox x:Name="ParametresAvancesCheckBox2" Foreground="Black" FocusVisualStyle="{x:Null}" 
                                               Content="{StaticResource AdvancedSettings}" Margin="0,10,0,0"/>

                                    </StackPanel>

                                    <!-- Liste des Param Avancés : lié la visibilité a la checkbox précédente -->
                                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
                                        <!--DPT Attendu : Liée le ComboBox au dico de DPT-->
                                        <TextBlock Text="{StaticResource ExpectedDPT}" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                        <ComboBox x:Name="DptRetourComboBox2" HorizontalAlignment="Left" Width="200">
                                            <ComboBoxItem Content="8 bit" />
                                            <ComboBoxItem Content="16 bits" />
                                        </ComboBox>
                                        <!-- + Ajouter le sous-type de DPT Attendu en fonction du DPT choisi-->
                                    </StackPanel>

                                    <!-- Tableaux des Envois/Receptions : Mécanisme à mettre en place la suite n'est que de la figuration-->
                                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                                        <TextBlock Text="{StaticResource TableTitleSentExpected}" />

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Button Content="+" Width="30" Height="30" Margin="0,5,0,0"/>
                                            <TextBox x:Name="ValeurEnvoye1TextBox" Width="50" Margin="10,0,0,0" />
                                            <TextBox x:Name="ValeurAttendue1TextBox" Width="50" Margin="10,0,0,0" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Button Content="-" Width="30" Height="29" Margin="0,5,0,0"/>
                                            <TextBox x:Name="ValeurEnvoye2TextBox" Width="50" Margin="10,0,0,0" />
                                            <TextBox x:Name="ValeurAttendue2TextBox" Width="50" Margin="10,0,0,0" />
                                        </StackPanel>

                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>

                            <!-- Boutons Enregister et Filtrer-->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="1" Margin="10">
                                <Button Style="{StaticResource IconTextButtonStyle}"
                                    Tag="{StaticResource FilterDrawingImage}"
                                    Content="Filtrer" Margin="10,0"/>
                                <Button Style="{StaticResource IconTextButtonStyle}"
                                    Tag="{StaticResource CheckmarkDrawingImage}"
                                    Content="{StaticResource Save}"
                                    Command="{Binding SaveCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>


                    <!-- Troisième colonne : Paramètres des Commandes _____________________________________________________________________________________________________________________ -->
                        <!-- En-tête -->
                    <Border Grid.Row="0" Grid.Column="2" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,0,1,0" >
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />  <!-- Titre -->
                                <ColumnDefinition Width="*" /> <!--Bouton de fermeture-->
                            </Grid.ColumnDefinitions>

                            <!-- Titre -->
                            <TextBlock Grid.Column="0"
                                       Style="{StaticResource TitleTextStyle}"
                                       Text="{StaticResource CommandeParametersTitle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="5,0"
                            />

                            <!-- Bouton de fermeture-->
                            <Button Grid.Column="1"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource CloseDrawingImage}"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                Height="35"
                                Command="{Binding HideAdressColumnCommand}"
                            />
                        </Grid>
                    </Border>
                        
                    <!--Contenu des paramètres : Voir Maquette-->
                    <Border Grid.Row="1" Grid.Column="2" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,0,1,0"
                            Padding="10,0">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" /> <!-- Paramètres-->
                                <RowDefinition Height="Auto" /> <!--Boutons enregister-->
                            </Grid.RowDefinitions>
                            
                            <!-- Paramètres : Structure à revoir et contenue à completer-->
                            <StackPanel Grid.Row="0" Orientation="Vertical">
                                <TextBlock Text="Cmd_ScenarioSalon_OnOff_MaisonDupre_RezDeChaussee_Etage_Salon" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

                                <StackPanel Orientation="Horizontal">

                                    <!-- DPT Envoyé : lier le ComboBox au dico de DPT en Back-->
                                    <TextBlock Text="{StaticResource SentDPT}" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,10,0"/>
                                    <ComboBox Width="200" HorizontalAlignment="Left" Grid.Row="1">
                                        <ComboBoxItem Content="1 bit" />
                                        <ComboBoxItem Content="2 bits" />
                                        <ComboBoxItem Content="4 bits" />
                                    </ComboBox>

                                </StackPanel>
                                
                                <!--Titre du tableau -->
                                <TextBlock Text="{StaticResource IEAccociated}" 
                                           Style="{StaticResource TitleTextStyle}"
                                           FontSize="14"
                                           Padding="0,10"
                                />
                                
                                <!-- + Tableau d'association Modèle/CMD/IE a liée avec le Back-->

                            </StackPanel>

                            <!--Bouton enregister-->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
                                <Button Grid.Row="1" Style="{StaticResource IconTextButtonStyle}" 
                                Tag="{StaticResource CheckmarkDrawingImage}"
                                Content="{StaticResource Save}"
                                Command="{Binding SaveCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                        

                    <!-- Quatrième colonne___________________________________________________________________________________________________________________________________ -->
                    <!-- En-tête -->
                    <Grid Grid.Row="0" Grid.Column="3"  Background="{StaticResource BackgroundLightGray}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" /> <!--Titre avec son icon-->
                            <ColumnDefinition Width="Auto" /> <!--Bouton de recherche-->
                        </Grid.ColumnDefinitions>


                        <!--Titre avec son icon-->
                        <StackPanel Grid.Column="0"  Background="Transparent" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource GroupAdressesDrawingImage}" Height="20"/>
                            <TextBlock 
                                    Style="{StaticResource TitleTextStyle}"
                                    Text="{StaticResource GroupAdressesTitle}"
                            />
                        </StackPanel>

                        <!--Bouton de recherche : Non-implementer-->
                        <Button Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource SearchDrawingImage}"
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="1"
                                Margin="5"
                                Padding="5"
                                Background="{StaticResource BackgroundWhite}"
                                Height="30"
                        />

                    </Grid>
            

                    <!-- TreeView(figuratif) : à redesign entièrement selon la maquette, ajouter les infos de liaison, et ouvrir les paramètres sur clique -->
                    <TreeView Grid.Row="1" Grid.Column="3">
                        <TreeViewItem Header="ECLAIRAGE SIMPLE" IsExpanded="True">
                            <TreeViewItem Header="ON/OFF" IsExpanded="True">
                                <TreeViewItem Header="Cmd_Eclairage_OnOff_MaisonDupre_RezDeChaussee_Etage_Salon" Tag="1/1/1"/>
                                <TreeViewItem Header="Cmd_Eclairage_OnOff_MaisonDupre_RezDeChaussee_Etage_Salon" Tag="1/1/2"/>
                                <TreeViewItem Header="Cmd_Eclairage_OnOff_MaisonDupre_RezDeChaussee_Etage_Entree" Tag="1/1/0"/>
                            </TreeViewItem>
                        </TreeViewItem>

                        <TreeViewItem Header="ECLAIRAGE VARIABLE" IsExpanded="True">
                            <TreeViewItem Header="ON/OFF" IsExpanded="True">
